<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
    "http://java.sun.com/j2ee/dtds/web-app_2.2.dtd">

<web-app>

    <!-- listeners -->

    <listener>
        <listener-class>com.app.ui.servlet.MyServletContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.apache.commons.fileupload.servlet.FileCleanerCleanup</listener-class>
    </listener>
    
    <!-- filters -->
    
    <filter>
        <filter-name>appFilter</filter-name>
        <filter-class>com.app.ui.servlet.MyServletFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>appFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>    

    <!-- servlets -->

    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>com.app.ui.servlet.MyMainServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>download</servlet-name>
        <servlet-class>com.app.ui.servlet.MyDownloadServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ajax</servlet-name>
        <servlet-class>com.app.ui.servlet.MyAjaxServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>callback</servlet-name>
        <servlet-class>com.app.ui.servlet.MyCallbackServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>monitor</servlet-name>
        <servlet-class>com.app.ui.servlet.monitor.MyMonitorServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>com.app.ui.servlet.MyTestServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>web</servlet-name>
        <servlet-class>com.app.ui.servlet.MyWebServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>api</servlet-name>
        <servlet-class>com.app.ui.servlet.MyApiServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>jade</servlet-name>
        <servlet-class>com.app.ui.servlet.MyJadeServlet</servlet-class>
    </servlet>

    <!-- mappings -->

    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/servlet/main/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>download</servlet-name>
        <url-pattern>/servlet/download/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ajax</servlet-name>
        <url-pattern>/servlet/ajax</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>callback</servlet-name>
        <url-pattern>/servlet/callback/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>monitor</servlet-name>
        <url-pattern>/servlet/monitor</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/servlet/test</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>web</servlet-name>
        <url-pattern>/web/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>api</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>jade</servlet-name>
        <url-pattern>/jade/*</url-pattern>
    </servlet-mapping>

    <!-- expires filter -->
    
    <filter>
        <filter-name>ExpiresFilter</filter-name>
        <filter-class>org.apache.catalina.filters.ExpiresFilter</filter-class>
        <init-param>
           <param-name>ExpiresDefault</param-name>
           <param-value>access plus 1 years</param-value>
       </init-param>
    </filter>
    <filter-mapping>
       <filter-name>ExpiresFilter</filter-name>
       <url-pattern>/static/*</url-pattern>
       <dispatcher>INCLUDE</dispatcher>
       <dispatcher>FORWARD</dispatcher>
       <dispatcher>ERROR</dispatcher>
       <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
</web-app>
